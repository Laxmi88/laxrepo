<project name="jrestfulservice-build" basedir="." default="oc4jstop">
	
	<property environment="env"/>
	<property file="build.properties"/> 
	
	<target name="oc4jstop" depends="">
		<echo message="***** Shutting down Server instance *****" />
		<java jar="${oc4j.admin.jar}" fork="yes">
			<arg value="${oc4j.deployer.uri}" />
			<arg value="${oc4j.admin.user}" />
			<arg value="${oc4j.admin.password}" />
			<arg value="-shutdown" />
			<arg value="ordinary" />
		</java>
	</target>
	
</project>
