<project name="jerseyspring-build" basedir="." default="redeploy-oc4j">
	
	<property environment="env"/>
	<property file="build.properties"/> 
	
	<target name="redeploy-oc4j" depends="">
		<echo message="Copying the archive EAR from ${dist.dir} to Auto Deploy Dir ${oc4j.auto.deploy.dir}" />
		<copy file="${dist.dir}/${app.name}.ear" tofile="${oc4j.auto.deploy.dir}/${app.name}.ear"/>
		<echo message="Restarting the app ${app.name}" />
		<java jar="${oc4j.admin.jar}" fork="yes">
			<arg value="${oc4j.deployer.uri}" />
			<arg value="${oc4j.admin.user}" />
			<arg value="${oc4j.admin.password}" />
			<arg value="-application" />
			<arg value="${app.name}" />
			<arg value="-restart" />		   
		</java>
	</target>
	
</project>
