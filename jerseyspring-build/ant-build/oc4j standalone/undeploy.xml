<project name="jrestfulservice" basedir="." default="undeploy-oc4j">
  <property file="build.properties"/> 
  <target name="undeploy-oc4j" depends="">
	  <echo message="UnDeploying ${app.name} from ${oc4j.deployer.uri}" />
	  <java jar="${oc4j.admin.jar}" fork="yes">
		   <arg value="${oc4j.deployer.uri}" />
		   <arg value="${oc4j.admin.user}" />
		   <arg value="${oc4j.admin.password}" />
		   <arg value="-undeploy" />
		   <arg value="${app.name}" />
	  </java>
  </target>
</project>
